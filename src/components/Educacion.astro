---
import EducacionItem from "./EducacionItem.astro";
import { getI18N } from "../i18n/";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const EDUCACION = i18n.EDUCACION;
---

<ol class="relative border-s border-gray-200 ml-3">
  {
    EDUCACION.map((educacion) => (
      <li class="mb-10 ms-4">
        <EducacionItem {...educacion} />
      </li>
    ))
  }
</ol>
